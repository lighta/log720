<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
 <class name="springapp.domain.Product" table="products">
  <id column="id" name="id">
   <generator class="native"/>
  </id>
  <!--
	  Properties (attributes) of the class that need to be persisted
	
	  "column" atrribute: by default, property name. "date" is a reserved
	     keyword in most DBs, so we override.

	  "type" attribute: Hibernate mapping type. Converts java types to SQL
	     types and vice versa. Can be inferred via reflection in some cases
	     (e.g. "string" for title), but not all. For example, java.util.Date
	     should map to a SQL date, timestamp, or time column. We preserve
	     full date and time information by mapping the property with a
	     timestamp converter. 
	-->
  <property column="description" generated="never" lazy="false"
   name="description" type="string"/>
  <property column="price" generated="never" lazy="false" name="price" type="double"/>
 </class>
</hibernate-mapping>
